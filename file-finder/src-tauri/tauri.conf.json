{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "File Finder",
  "version": "1.0.0",
  "identifier": "com.wanth.file-finder",
  "build": {
    "frontendDist": "../src"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "File Finder",
        "width": 1000,
        "height": 700,
        "minWidth": 600,
        "minHeight": 400,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": ["msi", "nsis", "app", "dmg", "deb", "appimage"],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "windows": {
      "certificateThumbprint": null,
      "digestAlgorithm": "sha256",
      "timestampUrl": "",
      "wix": {
        "language": "en-US",
        "template": "main.wxs"
      },
      "nsis": {
        "installMode": "perMachine",
        "installerIcon": "icons/icon.ico"
      }
    },
    "macOS": {
      "frameworks": [],
      "minimumSystemVersion": "10.13",
      "entitlements": null,
      "exceptionDomain": "",
      "signingIdentity": null
    },
    "linux": {
      "deb": {
        "depends": []
      }
    },
    "resources": [],
    "externalBin": [],
    "copyright": "Â© 2025 File Finder. All rights reserved.",
    "category": "Utility",
    "shortDescription": "Fast file finder and search tool",
    "longDescription": "A high-performance file finder with advanced search capabilities, regex support, and intelligent caching for large file systems.",
    "publisher": "File Finder Team",
    "homepage": "https://github.com/vijayam1030/file-finder-tauri"
  }
}
